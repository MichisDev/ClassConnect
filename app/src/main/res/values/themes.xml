        <item name="android:textColor">@color/md_theme_onTertiaryContainer</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/spectralregular</item>
        <item name="android:dropDownSelector">@drawable/bg_spinner</item>
    </style>

