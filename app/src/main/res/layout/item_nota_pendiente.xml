<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_theme_surfaceVariant"
    android:elevation="2dp">

    <!-- Nombre del alumno -->
    <TextView
        android:id="@+id/tvNombreAlumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alumno"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/md_theme_primary"
        android:fontFamily="@font/spectralbold" />

    <!-- Nombre de la asignatura -->
    <TextView
        android:id="@+id/tvAsignaturaPendiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Asignatura"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/md_theme_onSurface"
        android:fontFamily="@font/spectralextrabold" />

    <!-- Calificación propuesta -->
    <TextView
        android:id="@+id/tvNotaPendiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nota propuesta"
        android:textSize="14sp"
        android:textColor="@color/md_theme_onSurface"
        android:fontFamily="@font/spectralregular" />

    <!-- Fecha en que se propuso la nota -->
    <TextView
        android:id="@+id/tvFechaNotaPendiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="12sp"
        android:textColor="@color/md_theme_outline"
        android:fontFamily="@font/spectralregular" />

    <!-- Estado actual de la nota -->
    <TextView
        android:id="@+id/tvEstadoNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pendiente de validación"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/md_theme_outline"
        android:fontFamily="@font/spectralitalic" />

</LinearLayout>
