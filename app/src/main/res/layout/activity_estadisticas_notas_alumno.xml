<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_surface"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".EstadisticasNotasAlumnoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/ic_estadisticas" />

        <TextView
            android:id="@+id/tvTituloGrafico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_estadisticas"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/md_theme_primary"
            android:fontFamily="@font/spectralregular" />
    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartNotas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_item_card"
        android:padding="16dp" />
</LinearLayout>
