<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearEventoPadre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/spectralbold"
            android:text="@string/nuevo_evento_personal"
            android:textColor="@color/md_theme_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/md_theme_surfaceContainer"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etTituloPadre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/md_theme_primary"
                    android:hint="@string/titulo_evento"
                    android:textColorHint="@color/md_theme_primary" />

                <EditText
                    android:id="@+id/etDescripcionPadre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/md_theme_primary"
                    android:hint="@string/descripcion_evento"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:textColorHint="@color/md_theme_primary" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@color/md_theme_primaryContainer"
                    android:backgroundTint="@color/md_theme_primaryContainer"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/seleccionar_fecha"
                    android:textColor="@color/md_theme_onPrimaryContainer" />

                <TextView
                    android:id="@+id/tvHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@color/md_theme_primaryContainer"
                    android:backgroundTint="@color/md_theme_primaryContainer"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="@string/seleccionar_hora"
                    android:textColor="@color/md_theme_onPrimaryContainer" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btnCrearEventoPadre"
            style="@style/Widget.AgendaDigital.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/crear_evento" />

    </LinearLayout>
</ScrollView>
