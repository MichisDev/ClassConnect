    <!-- Boton -->
    <style name="Widget.AgendaDigital.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/md_theme_tertiaryFixed_highContrast</item>
        <item name="android:textColor">@color/md_theme_onTertiary_highContrast</item>
        <item name="android:fontFamily">@font/spectralbold</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/md_theme_primaryContainer</item>
        <item name="elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Spinner-->
